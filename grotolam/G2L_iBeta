#!/bin/bash
LBlue='\033[1;34m'
Green='\033[0;32m'
Bcolor='\033[0m'
printf "\n${LBlue}      -- BETA -- ${Bcolor}\n\n"
printf "\n${LBlue} INSTALLING GRO2LAM ${Bcolor}\n\n"

wget https://github.com/hernanchavezthielemann/GRO2LAM/archive/opls_mol_double_tag.zip
unzip opls_mol_double_tag.zip

printf "${LBlue} Collecting garbage ${Bcolor}\n\n"
rm opls_mol_double_tag.zip
rm G2L_iBeta

cd GRO2LAM-opls_mol_double_tag
python setup
printf "\n${Green} Install finished ${Bcolor}\n"
./run
